@model IEnumerable<BookAuthor.Models.Author>
<br />
<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })

    @* <td> @Html.ActionLink("Create Book", "Index", "Book", new { @class = "btn btn-primary" }) </td>  *@
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Last_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_Of_Birth)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.First_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Of_Birth)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Author_id }, new { @class = "btn btn-primary" }) 
                @Html.ActionLink("AuthorDetails", "Details", new { id = item.Author_id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Author_id }, new { @class = "btn btn-success" })|

            </td>
        </tr>
    }

</table>
